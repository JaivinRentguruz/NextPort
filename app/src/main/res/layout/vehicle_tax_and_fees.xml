<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:orientation="horizontal"
    android:weightSum="9">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_taxName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Car Rental Sales Tax"
            android:textColor="#404040"
            android:fontFamily="@font/ubuntu_light"
            android:textSize="@dimen/txt_font_size"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tax_Desc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/car_rental_tax"
            android:textColor="@color/textColorHint"
            android:fontFamily="@font/ubuntu_light"
            android:textSize="@dimen/txt_font_size"/>
            <TextView
                android:id="@+id/tax_basicValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5.00"
                android:textColor="@color/textColorHint"
                android:fontFamily="@font/ubuntu_light"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/txt_font_size"/>
            <TextView
                android:id="@+id/tax_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2.00"
                android:textColor="@color/textColorHint"
                android:fontFamily="@font/ubuntu_light"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/txt_font_size"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/ubuntu_light"
            android:gravity="center_vertical"
            android:text="US$ "
            android:textColor="#404040"
            android:textSize="@dimen/txt_font_size"/>
        <TextView
            android:id="@+id/txt_taxTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/ubuntu_light"
            android:gravity="center_vertical"
            android:text="100.00"
            android:textColor="#404040"
            android:textSize="@dimen/txt_font_size"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/selected_dot"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/selectedlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backimg_IP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_chevron_left" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="Insurance policy"
                        android:textAllCaps="true"
                        android:textColor="@color/TitleTextColor"
                        android:textSize="17dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/edit_InsurancePolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="save"
                    android:textAllCaps="true"
                    android:textColor="@color/TitleTextColor"
                    android:textSize="14dp" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/selectedlocation"
            android:background="@drawable/curve_box">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/ubuntu"
                        android:textAllCaps="true"
                        android:text="Insurance policy"
                        android:textColor="@color/selected_dot"
                        android:textSize="17dp" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorHint"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/ubuntu"
                    android:text="Policy number"
                    android:textColor="@color/registerTextColor"
                    android:textSize="@dimen/txt_font_size" />

                <EditText
                    android:id="@+id/edt_PolicyNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/ic_rectangle_box_215"
                    android:fontFamily="@font/ubuntu"
                    android:inputType="text"
                    android:padding="5dp"
                    android:hint="Enter Policy Number"
                    android:textAlignment="textStart"
                    android:textColor="@color/registerTextColor"
                    android:textSize="@dimen/edt_font_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="left"
                        android:layout_marginRight="10dp"
                        android:text="Issue date"
                        android:textAllCaps="true"
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/txt_font_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="left"
                        android:text="Expiry Date"
                        android:textAllCaps="true"
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/txt_font_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/IpIssue_Date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:background="@drawable/ic_rectangle_box_215"
                        android:fontFamily="@font/ubuntu"
                        android:padding="5dp"
                        android:hint="Date"
                        android:drawableRight="@drawable/ic_calender"
                        android:textColor="@color/registerTextColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/edt_font_size" />

                    <TextView
                        android:id="@+id/edt_ExpiryDate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_rectangle_box_215"
                        android:drawableRight="@drawable/ic_calender"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="center_vertical"
                        android:hint="Date"
                        android:padding="5dp"
                        android:textColor="@color/registerTextColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/edt_font_size" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="Insurance company"
                    android:textAllCaps="true"
                    android:textColor="@color/registerTextColor"
                    android:textSize="@dimen/txt_font_size" />

                <Spinner
                    android:id="@+id/sp_InsuranceCompList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/ic_spinner_bg_light"
                    android:fontFamily="@font/ubuntu"
                    android:inputType="text"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/edt_font_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="Upload policy"
                    android:textAllCaps="true"
                    android:textColor="@color/header1_color"
                    android:textSize="@dimen/heading1_font_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_take_a_pic"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/Img_UploadPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>